{
  "name": "edumarques/dynamophp",
  "description": "DynamoPHP is a lightweight, strongly-typed Object Data Mapper designed to simplify development with Amazon DynamoDB.",
  "license": "MIT",
  "authors": [
    {
      "name": "Eduardo Marques",
      "email": "eduardomarqs1@gmail.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "aws/aws-sdk-php": "^3.343",
    "symfony/serializer": "^7.2",
    "symfony/property-access": "^7.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.12",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.1",
    "slevomat/coding-standard": "^8.18",
    "symfony/var-dumper": "^7.2"
  },
  "autoload": {
    "psr-4": {
      "EduardoMarques\\DynamoPHP\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EduardoMarques\\DynamoPHP\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
